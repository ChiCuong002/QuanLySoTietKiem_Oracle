@model IEnumerable<HQT_CSDL.Models.SOTIETKIEM>

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Danh sách sổ tiết kiệm</h2>

<p>
    @Html.ActionLink("Create New", "MoSo")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NGAYMOSO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NGAYDENHAN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SOTIENGUI)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TINHTRANG)
        </th>
    
        <th>
            @Html.DisplayNameFor(model => model.LOAITIETKIEM.TENLOAITK)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYMOSO)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYDENHAN)
        </td>
        <td>
            @String.Format("{0:N0}", item.SOTIENGUI) VNĐ
        </td>
   
        <td>
            @Html.DisplayFor(modelItem => item.KHACHHANG.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LOAITIETKIEM.TENLOAITK)
        </td>
        <td>
            @Html.ActionLink("Xem chi tiết", "Details", new { id=item.MASTK }) |
            @Html.ActionLink("Lịch sử giao dịch","LSGD", new {id = item.MASTK})
        </td>
    </tr>
}

</table>
